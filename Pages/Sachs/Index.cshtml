    <tbody>
@foreach (var item in Model.Sach) {
    if (@Model.Theloaisach.Count >0)
            {
                <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tensach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => @Model.Theloaisach[item.Theloaisach - 1].Tentheloaisach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tacgia)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.NamXb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhaXb)
            </td>
