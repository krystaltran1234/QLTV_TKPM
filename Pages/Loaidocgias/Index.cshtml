@page
@model QLTV_TKPM.Pages.Loaidocgias.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Loại độc giả</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Loaidocgia[0].TenLoaidocgia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Loaidocgia) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoaidocgia)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
